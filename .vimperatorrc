:set noautocomplete

imap <Nul> <Esc>n
nmap <Nul> <Esc>
" VIMPERATOR
cmap <C-Space> <Esc>
vmap <C-Space> <Esc>
imap <C-Space> <Esc>n
map <C-Space> <Esc>

" always show tab line
"set showtabline=2

" map dvorak movement keys and ``domino'' keys
noremap d h
"noremap h j
"noremap t k
" VIMPERATOR NOTE: DON'T USE g.
"noremap h gj
"noremap t gk
noremap n l

noremap H j
noremap T k
noremap h 3j
noremap t 3k
noremap <c-e> 3<c-e>
noremap <c-y> 3<c-y>

"inoremap d h
"inoremap h j
"inoremap t k
"inoremap n l

"" delete -> junk
"noremap j d
"noremap J D
" join -> konnect
noremap K J
" next -> last search
noremap l n
noremap L N

"\. to repeat last command while keeping cursor in same spot
nnoremap \. .`[

" ALT+1-9 for first 9 tabs, ALT-0 for last tab
map 1 1gt
map 2 2gt
map 3 3gt
map 4 4gt
map 5 5gt
map 6 6gt
map 7 7gt
map 8 8gt
map 9 9gt
map 0 :tablast<Return>

" CTRL+k/j to open and close cabs
"nnoremap <c-k> :tabnew<Return>:bn<Return>:bd #<Return>
map <c-k> :tabnew<Return>
map <c-j> :tabclose<Return>
map <c-w> :tabclose<Return>

map <c-d> :tabp<Return>
map <c-n> :tabn<Return>
imap <c-n> <Esc>
cmap <c-n> <Esc>
vmap <c-n> <Esc>

"nnoremap <c-h> :bp<Return>
"nnoremap <c-t> :bn<Return>
"nnoremap <c-t> t
"nnoremap <c-T> T
"nnoremap <c-t> t<Return>
"nnoremap <c-T> T<Return>
map ^t k<Return>
map ^T K<Return>
nnoremap k t
nnoremap K T

"nnoremap  k.`[
nnoremap <c-a> j.`[
nnoremap \' k.
nnoremap a j.

" set visualbell ONLY if terminal has bell enabled since beeping in vim is
" kind of redundant.  Otherwise comment this next line out since visual bells
" cause a delay in vim.
"set visualbell
set noerrorbells
set visualbell

" VIMPERATOR: F2 for bookmarks menu
noremap <F2> :emenu View.Sidebar.Bookmarks<Enter>

"set vb t_vb=

""nnoremap ^c :set guioptions=mTBnNbrl<Return>
""nnoremap ^c :set guioptions=rb<Return>
""nnoremap ^C :set guioptions=rb<Return>
""nnoremap ^g :set guioptions=rb<Return>
""nnoremap ^G :set guioptions=rb<Return>
":set guioptions=rb

:set noautocomplete
